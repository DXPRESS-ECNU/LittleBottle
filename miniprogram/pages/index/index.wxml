<!--index.wxml-->
<view class="container">
  <view id="title-row">
    <text id="title">我是标题</text>
  </view>
  <view class="bottle-grid"> 
    <view wx:for="{{bottles}}" wx:for-item="bt" wx:for-index="idx">
      <template is="bottle" data="{{...bt, idx: idx}}"></template>
    </view>
  </view>
</view>

<template name="bottle">
  <view>
    <view class="bottle">
      <image src="cloud://dxzsbottle-iu8cx.6478-dxzsbottle-iu8cx-1301327315/bottle.svg"     class="empty" bindtap="updateBottle" data-index="{{idx}}">
      </image>
      <image class="stuff1" src="../../bottles/1.png"></image>
      <image class="stuff2" src="../../bottles/1.png"></image>
      <!-- <image class="stuff3" src="../../bottles/1.png"></image>
      <image class="stuff4" src="../../bottles/1.png"></image>
      <image class="stuff5" src="../../bottles/1.png"></image> -->
    </view>
    <text class="name">{{name}}</text>
  </view>
</template>

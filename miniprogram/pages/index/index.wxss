/**index.wxss**/
text {
  text-align: center;
}
#title-row {
  display: flex;
  justify-content: center;
}

.bottle-grid {
  margin-top: 30;
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.grid-item{
  flex: 0 0 auto;
  width: 20%;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
}

.name {
  display: block;
  font-size: 0.8rem;
}

.bottle {
  position: relative;
  width: 130rpx;
  height: 130rpx;
  z-index: 10;
}

